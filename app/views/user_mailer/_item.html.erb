<% quantity = item['quantity'].to_i %>

<% if product = Product.find_by(id: item.product_id) %>
  <% item_total = product.price * quantity %>

  <tr>
  TOTAL: <%= item_total %>
    <td>
      <h4> NAME: <%= product.name %></h4>
      <br>
      <p> DESCRIPTION: <%= product.description %></p>
    </td>
    <td>
      PRICE: <%= product.price %>
    </td>

  </tr>
<% end %>